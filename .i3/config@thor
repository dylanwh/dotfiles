
# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $font pango:Fira Mono Medium 18

# font for window titles. ISO 10646 = Unicode
font $font

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
floating_maximum_size 1600 x 900
floating_minimum_size 160 x 90

force_focus_wrapping no
force_display_urgency_hint 500 ms

# start a terminal
bindsym $mod+grave exec gnome-terminal
bindsym $mod+Escape exec gnome-terminal

# kill focused window
bindsym $mod+Shift+C kill

# start gmrun (a program launcher)
bindsym $mod+p exec dymenu-run
bindsym $mod+o exec dymenu-fasd
bindsym $mod+x exec i3-freeze
bindsym XF86ScreenSaver exec i3-freeze

bindsym $mod+Shift+v exec --no-startup-id xdo-paste

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+u [urgent="last"] focus

# move focused window
bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

# split in horizontal orientation
bindsym $mod+Shift+bar split h

# split in vertical orientation
bindsym $mod+Shift+minus split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen
bindsym $mod+t floating toggle

bindsym $mod+q layout toggle split
bindsym $mod+w layout stacked
bindsym $mod+e layout tabbed

# change container layout (stacking, tabbed, default)
bindsym $mod+space layout toggle all

# toggle tiling / floating
bindsym $mod+Shift+space layout default

# change focus between tiling / floating windows
bindsym $mod+Tab focus mode_toggle

bindsym $mod+b border toggle
bindsym $mod+m bar mode toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1                 workspace number 1
bindsym $mod+2                 workspace number 2
bindsym $mod+3                 workspace number 3
bindsym $mod+4                 workspace number 4
bindsym $mod+5                 workspace number 5
bindsym $mod+6                 workspace number 6
bindsym $mod+7                 workspace number 7
bindsym $mod+8                 workspace number 8
bindsym $mod+9                 workspace number 9
bindsym $mod+0                 workspace number 10
bindsym $mod+s             scratchpad show
bindsym $mod+comma             focus output VIRTUAL1
bindsym $mod+period            focus output LVDS1

# move focused container to workspace
bindsym $mod+Shift+exclam      move container to workspace number 1
bindsym $mod+Shift+at          move container to workspace number 2
bindsym $mod+Shift+numbersign  move container to workspace number 3
bindsym $mod+Shift+dollar      move container to workspace number 4
bindsym $mod+Shift+percent     move container to workspace number 5
bindsym $mod+Shift+asciicircum move container to workspace number 6
bindsym $mod+Shift+ampersand   move container to workspace number 7
bindsym $mod+Shift+asterisk    move container to workspace number 8
bindsym $mod+Shift+parenleft   move container to workspace number 9
bindsym $mod+Shift+parenright  move container to workspace number 10
bindsym $mod+Shift+S       move scratchpad

bindsym $mod+Shift+less        move workspace to output left
bindsym $mod+Shift+greater     move workspace to output right

bindsym $mod+Shift+Up    move workspace to output up
bindsym $mod+Shift+Down  move workspace to output down
bindsym $mod+Shift+Left  move workspace to output left
bindsym $mod+Shift+Right move workspace to output right

bindsym XF86Back   workspace prev
bindsym XF86Forward workspace next

for_window [class="URxvt"] border 1pixel
for_window [class="Gnome-terminal"] border 1pixel
for_window [class="Emacs"] border 1pixel
for_window [class="Google-chrome"] border 1pixel

for_window [class="Gmrun"] floating enable
for_window [class="feh"] floating enable
for_window [class="Pinentry"] floating enable
for_window [class="Pavucontrol"] floating enable
for_window [class="Paprefs"] floating enable
for_window [title="^Event Tester$"] floating enable
for_window [window_role="^pop-up$"] floating enable
for_window [class="^Blueman-"] floating enable
for_window [class="VidyoDesktop"] floating enable
for_window [class="emulator64-arm"] floating enable
for_window [title="^Steam(?: Login)?$"] floating enable
for_window [class="Steam" title="^Steam$"] floating disable
for_window [class="Steam" title="^Install"] floating enable

for_window [class="Google-chrome"] layout tabbed
for_window [class="MPlayer"] floating enable

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window's width.
        # Pressing right will grow the window's width.
        # Pressing up will shrink the window's height.
        # Pressing down will grow the window's height.
        bindsym h resize grow width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize shrink width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


bindsym $mod+r mode "resize"

# solarized
# client.background       #eee8d5
#                       border       background   text           indicator
# client.focused          #eee8d5  #268bd2 #93a1a1   #cb4b16
# client.unfocused        #657b83 #002b36 #657b83 #cb4b16
# client.focused_inactive #586e75 #002b36 #586e75 #cb4b16
# client.urgent           #657b83 #dc322f #eee8d5  #cb4b16

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    tray_output primary
    status_command i3status
    position top

    colors {
        # base02
        background #002b36

        # base1
        statusline #839496

        # base3, #base02
        focused_workspace #eee8d5 #073642

        # base01, #base03
        active_workspace #657b83 #002b36

        # base00, base02
        inactive_workspace #586e75 #002b36

        # red, base02
        urgent_workspace #dc322f #002b36
    }
}


exec --no-startup-id /usr/libexec/gnome-settings-daemon
exec --no-startup-id emacs
exec gnome-terminal
exec firefox
