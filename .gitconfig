[push]
    default = simple

[user]
    email = dylan@hardison.net
    name = Dylan Hardison

[alias]
    co = checkout
    ci = commit
    br = branch
    st = status --short --branch
    up = !git fetch --all --tags --prune && git pull --rebase
    reword = commit --amend
    top = !pwd
    home = !cd $HOME && git --git-dir=$HOME/.homegit

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = green bold
  frag = green bold
  old = red bold
  new = green

[color "status"]
  added = blue
  changed = magenta bold
  untracked = green bold

[core]
    excludesfile = ~/.cvsignore
