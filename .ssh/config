# vim: set et:
HashKnownHosts no
UserKnownHostsFile ~/.cache/ssh/known_hosts ~/.ssh/known_hosts
Compression yes

ControlPath /tmp/dylan-%r@%h:%p.ssh
ControlMaster auto

ServerAliveInterval 60
SendEnv LANG LC_*

# This cannot be set in a host block...
PreferredAuthentications publickey,keyboard-interactive,password

Host lofn.hardison.net lofn hardison.net
    Hostname hardison.net
    ControlPersist yes
    ForwardAgent yes
    DynamicForward 8888

Host lofn2.hardison.net lofn2
    Hostname lofn2.hardison.net
    Port 443
    ForwardAgent yes

Host sjofn.hardison.net sjofn slug suncoastlug.org
    Hostname suncoastlug.org
    ControlPersist yes
    ForwardAgent yes
    
Host syn.hardison.net syn
    Hostname syn.hardison.net
    HostKeyAlias syn.hardison.net
    Port 2223
    ForwardAgent yes


Host git.hardison.net git
    Hostname git.hardison.net
    User git
    ForwardAgent no
    ForwardX11 no

Host github.com
    Hostname github.com
    User git
    ForwardAgent no
    ForwardX11 no

Host kvasir.god kvasir kvas
    Hostname kvasir.god
    HostKeyAlias kvasir.god
    ForwardAgent yes

Host kvasir.home
    Hostname home.hardison.net
    HostKeyAlias kvasir.home
