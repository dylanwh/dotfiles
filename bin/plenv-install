#!/bin/zsh

git clone git://github.com/tokuhirom/plenv.git ~/app/plenv 
mkdir ~/app/plenv/plugins
git clone git://github.com/tokuhirom/Perl-Build.git ~/app/plenv/plugins/perl-build

> ~/app/plenv/zshenv <<'ZSHENV'
export PLENV_ROOT=$HOME/app/plenv

path=( ~/bin $PLENV_ROOT/shims $path )

source $PLENV_ROOT/completions/plenv.zsh

plenv() {
  local command
  command="$1"
  if [ "$#" -gt 0 ]; then
    shift
  fi

  case "$command" in
  rehash|shell)
    eval "`plenv "sh-$command" "$@"`";;
  *)
    command plenv "$command" "$@";;
  esac
}
ZSHENV


