#!/usr/bin/env perl
use strict;
use warnings;
use YAML::Syck qw(LoadFile);

my $quotes = LoadFile("$ENV{HOME}/.quotes");
my $quote = randquote($quotes);

print <<SIG;
$quote
-
GPG Fingerprint: 1AD8 69DD F56A E7AB 421C  7D8A C66D 87D9 82CD 4AE4.
SIG

sub randquote {
	my $quotes = shift;
	my $n = @$quotes;
	my $quote = $quotes->[int(rand($n))];
	return $quote;
}

