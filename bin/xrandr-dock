#!/bin/zsh

word="$1"
pkill optirun

case $word in
	d|desktop)
		xrandr --output VGA1 --auto --above LVDS1 --primary
		xrandr --output VIRTUAL --mode 1600x900 --left-of VGA1 --rotate right
		optirun bash -c 'DISPLAY=:8 xrandr --output DP-0 --rotate right; DISPLAY=:0 screenclone -s :0 -d :8 -x 2' &
	;;
	vga)
		xrandr --output VIRTUAL --off
		xrandr --output VGA1 --primary --auto --above LVDS1
	;;
	tv)
		xrandr --output VIRTUAL --mode 1920x1080 --above LVDS1 
		optirun env DISPLAY=:0 screenclone -d :8 -x 1 &
	;;
	none|off)
		xrandr --output VGA1 --off
		xrandr --output VIRTUAL --off
		xrandr --output LVDS1 --primary --auto
	;;
esac
