#!/bin/zsh

MINECRAFT_JAR=$HOME/.local/minecraft/Minecraft.jar

if [[ ! -f $MINECRAFT_JAR ]]; then
	mkdir -p $(dirname $MINECRAFT_JAR)
	wget -O $MINECRAFT_JAR 'http://www.minecraft.net/download/minecraft.jar?v=1298567471674'
fi

exec java -Xmx1024M -Xms512M -cp $MINECRAFT_JAR net.minecraft.LauncherFrame
