#!/usr/bin/env perl
use strict;
use warnings;

open NAMES, "$ENV{HOME}/bin/names";
local $/ = undef;
my $names = <NAMES>;
my @list = eval "($names)";

my %names = (
	chani => 1512584,
	data => 71500,
	vadim => 10073998,
	dylan => 2275455,
	@list ? @list : (),
);
my $i;

for my $word (@ARGV) {
	if ($word =~ /^\d+$/) {
		$i += $word;
	} elsif (exists $names{$word}) {
		$i += $names{$word};
	} else {
		warn "What is $word?\n";
	}
}

my $l = "a";

print "Number is $i\n";

while ($i-- > 0) {
	$l++;
}

print "$l (".uc($l).")\n";
