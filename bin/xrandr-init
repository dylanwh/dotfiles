#!/bin/zsh

xrandr --newmode "1920x1080" \
	148.5 1920 2008 2052 2200 1080 1089 1095 1125 +hsync +vsync
xrandr --newmode "1280x720" \
	74.25 1280 1320 1376 1650 720 722 728 750

xrandr --addmode VIRTUAL1 1920x1080
xrandr --addmode VIRTUAL1 1600x900
xrandr --addmode VIRTUAL1 1280x720
xrandr --addmode LVDS1 1280x720
xrandr --addmode DP-1 1280x720
