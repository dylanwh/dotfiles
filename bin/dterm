#!/usr/bin/env perl
use strict;
use warnings;
use File::Basename;
use Getopt::Long qw( :config gnu_getopt );

my $TERM  = 'urxvt';
my ($name, $eep, $chdir );

foreach (@ARGV) {
    if ($_ eq '-e') {
        $_ = '--';
        last 
    }
    elsif (/^-name/) {
        $_ = '--name';
    }
    elsif (/^-e(.+)$/) {
        unshift @ARGV, "-$1" if $1;
        $_ = '--';
        last;
    } 
}

GetOptions(
    'name|n=s'  => \$name,
    'e'         => \$eep,
    'chdir|C=s' => \$chdir,
);

my (@run) = @ARGV;

unless ($name) {
    if (-e "$ENV{HOME}/.outside") {
        $name = 'outside';
    }
    else {
        $name = $run[0];
    }
}

chdir $chdir if $chdir;
unshift @run, '-e' if @run;

run($TERM,
    -name  => $name,
    @run
);

sub run { 
    exec(@_);
}
