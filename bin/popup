#!/usr/bin/env zsh
TIMEOUT=20
SHORT_TIMEOUT=5
GMSG_OPTS=(-fn "terminus bold 14" -fg white -bg black -file - -center -default okay )

if ! which gmessage &> /dev/null; then
	function gmessage { gxmessage $argv }
fi

if [ -z $DISPLAY ]; then
	export DISPLAY=:0.0
fi

case $1 in
	(reminders)
		rem -g -q | gmessage $GMSG_OPTS -timeout $TIMEOUT -title "Reminders"
	;;
	([ty]odo)
		cd $HOME
		yodo | gmessage $GMSG_OPTS -timeout $TIMEOUT -title "TODO"
	;;
	(remind)
		echo $2 | gmessage $GMSG_OPTS -timeout $SHORT_TIMEOUT -title "Reminder"
	;;
esac
