#!/bin/zsh

flags=(
	-e 'onstart=lower'
	-e 'onclick=raise'
	-ta l
)

trap 'kill -TERM 0; exit 0' TERM INT KILL

tail -qF ~/.xmonad/notify.log \
	| xmonad-notify-filter \
	| dzen2 $flags "$@" &

wait $!

#  -ta l
#  -w $(( 1600 - 256 ))
#  -fg $fg
#  -bg $bg
#  -fn '-xos4-terminus-bold-r-*-*-*-120-100-100-*-*-iso8859-1'
