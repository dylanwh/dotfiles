#!/bin/zsh

profile=$1


if [[ -n $profile ]]; then
	script=$HOME/.screenlayout/$profile@$HOST.sh

	if [[ -x $script ]]; then
		 $script
		 . ~/.fehbg
	else
		echo "no such layout" >&2
	fi
else
	profiles=( $HOME/.screenlayout/*@$HOST.sh(:t:r:s/@$HOST/) )
	for profile in $profiles; do
		echo $profile
	done | sort
fi
