#!/bin/zsh
emulate zsh

if [[ -n $1 ]]; then
	summary=(-s $1)
else
	summary=(-n null)
fi

if [[ -n $2 ]]; then
	body=(-s $2)
else
	body=(-n null)
fi

if [[ -n $3 ]]; then
	expire=(-s $3)
else
	expire=(-n null)
fi

json=(
	$summary -i summary
	$body    -i body
	$expire  -i expire
	-s $(date +%s)  -i timestamp 
)

jshon -Q -n object $json| sed ':a;N;$!ba;s/\n/ /g' >> ~/.xmonad/notify.log
#>> ~/.xmonad/notify.log
