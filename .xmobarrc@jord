Config { font = "-*-terminus-*-*-*-*-*-320-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10

                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
    		        , Run Date "%H:%M" "date" 10
    		        , Run PipeReader ".xmonad/mail" "mail"
    		        , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% | %eth0% | %mail% | <fc=#ee9a00>%date%</fc> "
       }
