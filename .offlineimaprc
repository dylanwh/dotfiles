# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# suit to get started fast.
# vim: set ft=desktop foldmethod=marker cms=#%s:

[general]#{{{
accounts        = home
pythonfile      = ~/.offlineimap.py
maxconnections  = 3
maxsyncaccounts = 3
holdconnectionopen = yes

ui = Noninteractive.Basic
#}}}

[Account home]#{{{
localrepository  = local-home
remoterepository = remote-home
autorefresh      = 3
quick            = 3
socktimeout      = 60
#}}}

[Repository local-home]#{{{
type         = IMAP
remotehost   = imap.gmail.com
remoteuser   = dylan@hardison.net
remotepass   = tJHNq6eBCUn
folderfilter = lambda foldername: foldername.find("[Gmail]") != -1
ssl          = yes
#}}}

[Repository remote-home]#{{{
type         = IMAP
remotehost    = imap.gmail.com
remoteuser    = dylanwh@gmail.com
remotepass    = biendort
folderfilter = lambda foldername: foldername.find("[Gmail]") != -1
ssl           = yes
#}}}
