[%# vim: set ft=template: %]
[%-
SET path = filename.absolute.stringify;

m = path.match("lib/(.+)");
IF m;
    file = m.0;
ELSE;
    m = path.match("([A-Z][\\w/]+)");
    file = m.0;
END;

SET module = file.replace("/", "::").replace("\\.pm");
IF module.match("Role");
    class = 'role';
ELSE;
    class = 'class';
END;

IF PM_STYLE == 'mxd';
    INCLUDE "perl-module-mxd";
ELSE;
    INCLUDE "perl-module-old";
END;
-%]
