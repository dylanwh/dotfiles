[%# vim: set ft=template: %]
[%-
SET path = filename.absolute.stringify;

m = path.match("lib/(.+)");
IF m;
    file = m.0;
ELSE;
    m = path.match("([A-Z][\\w/]+)");
    file = m.0;
END;

SET module = file.replace("/", "::").replace("\\.pm");
IF module.match("Role");
    class = 'role';
ELSE;
    class = 'class';
END;

-%]
use 5.10.0;
use MooseX::Declare;

[% class %] [% module %] {
    our $VERSION = 0.001;
    our $AUTHORITY = 'cpan:DHARDISON';

}
