! vim: set ft=xdefaults fdm=marker cms=!%s:

#define BLUE  #000078
#define WHITE #A8A8A8
#define XFONT      -xos4-terminus-bold-r-*-*-*-120-100-100-*-*-iso8859-1
#define XFONT_BIG  -xos4-terminus-bold-r-*-*-*-140-100-100-*-*-iso8859-1
#define XFONT_HUGE -xos4-terminus-bold-r-*-*-*-320-*-*-*-*-*-*

! {{{ Fonts and Colors
Rxvt.font: XFONT

Rxvt.color0: #000000
Rxvt.color1: #A80000
Rxvt.color2: #00A800
!Rxvt.color3: #A8A800
Rxvt.color3: Orange3

Rxvt.color4: BLUE
Rxvt.color5: #A800A8
Rxvt.color6: #00A8A8
Rxvt.color7: WHITE

Rxvt.color8:  #646464
Rxvt.color9:  #FF0054
Rxvt.color10: #00FF54
Rxvt.color11: #FFFF54

Rxvt.color12: #0000FF
Rxvt.color13: #FF00FF
Rxvt.color14: #00FFFF
Rxvt.color15: #FFFFFF

Rxvt.foreground: WHITE
Rxvt.background: #000000
Rxvt.cursorColor: WHITE
Rxvt.reverseVideo: false

Rxvt.geometry: 80x25 
Rxvt.scrollBar: false
Rxvt.meta8: false
Rxvt.modifier: mod1
! }}}

! {{{ Keyboard bindings
#define change_font(FONT) \033]710;FONT\007\033]711;FONT\007
URxvt.keysym.M-C-1: command:change_font(XFONT)
URxvt.keysym.M-C-2: command:change_font(XFONT_BIG)
URxvt.keysym.M-C-3: command:change_font(XFONT_HUGE)
URxvt.keysym.S-Insert: builtin:
URxvt.searchable-scrollback: CM-s

! Keyboard yanking stuff:
URxvt.keysym.Mod4-y: perl:mark-and-yank:activate_mark_mode
URxvt.keysym.Mod4-u: perl:mark-and-yank:activate_mark_url_mode
URxvt.perl-lib: /home/dylan/.urxvt/
URxvt.perl-ext: mark-and-yank
URxvt.urlLauncher: url-handler
! }}}

! {{{ Fading, borrowed from Possum.
! this makes unfocused windows fade out to very dark blue.
URxvt.fading: 60
URxvt.fadeColor: #000015
! }}}
